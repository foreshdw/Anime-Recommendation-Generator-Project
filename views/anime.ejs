<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/anime.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>Anime Recommendation</title>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="container mt-5">
        <div class="row">
            <!-- Kolom Kiri -->
            <div class="col-lg-2">
                <div class="row">
                    <!-- Gambar atau konten pertama di kiri atas -->
                    <div class="col-12 mb-3">
                        <img src="<%= data.images.jpg.image_url %>" alt="Poster Anime" class="rounded img-fluid mx-auto">
                    </div>
                    <!-- Informasi Tambahan -->
                    <div class="animeinfo">
                        <p class="mb-0"><strong>Title:</strong> <%= data.title %></p>
                        <p class="mb-0"><strong>Title English:</strong> <%= data.title_english %></p>
                        <p class="mb-0"><strong>Title Japanese:</strong> <%= data.title_japanese %></p>
                        <p class="mb-0"><strong>Type:</strong> <%= data.type %></p>
                        <p class="mb-0"><strong>Source:</strong> <%= data.source %></p>
                        <p class="mb-0"><strong>Episodes:</strong> <%= data.episodes %></p>
                        <p class="mb-0"><strong>Status:</strong> <%= data.status %></p>
                        <p class="mb-0"><strong>Airing:</strong> 
                            <% if(data.airing == true) { %>
                                Yes
                            <% } else { %>
                                No
                            <% } %>
                        </p>
                        <p class="mb-0"><strong>Aired:</strong> <%= data.aired.string %></p>
                        <p class="mb-0"><strong>Duration:</strong> <%= data.duration %></p>
                        <p class="mb-0"><strong>Rating:</strong> <%= data.rating %></p>
                        <p class="mb-0"><strong>Score:</strong> <%= data.score %></p>
                        <p class="mb-0"><strong>Rank:</strong> <%= data.rank %></p>
                        <p class="mb-0"><strong>Season:</strong> <%= data.season %></p>
                        <p class="mb-0"><strong>Year:</strong> <%= data.year %></p>
                        <p class="mb-0"><strong>Broadcast:</strong> <%= data.broadcast.string %></p>
                        <p class="mb-0"><strong>Producers:</strong> <%= data.producers.name %></p>
                        <p class="mb-0"><strong>Licensors:</strong> <%= data.licensors.name %></p>
                        <p class="mb-0"><strong>Studios:</strong> <%= data.studios.name %></p>
                        <p class="mb-0"><strong>Genre:</strong> <%= data.genres.map(genre => genre.name).join(', ') %></p>
                        <p class="mb-4"><strong>Themes:</strong> <%= data.themes.map(theme => theme.name).join(', ') %></p>
                    </div>
                </div>
            </div>
            <!-- Kolom Kanan -->
            <div class="col-lg-10 d-flex flex-column justify-content-start">
                <p class="h4 mb-4 title-border"><%= data.title %></p>

                <p class="h5 mb-2">Synopsis</p>
                <p class="mb-4"><%= data.synopsis %></p>
                <% if (data.background) { %>
                    <p class="h5 mb-2">Background</p>
                    <p class="mb-4"><%= data.background %></p>
                <% } else { %>
                    <p class="h5 mb-2">Background</p>
                    <p class="mb-4">No Background Information Found.</p>
                <% } %>  
                
                <% if (data.trailer) { %>
                    <p class="h5 mb-2">Video Trailer</p>
                    <div class="ratio ratio-16x9 mb-4">
                        <iframe src="<%= data.trailer.embed_url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                <% } else { %>
                    <p class="h5 mb-2">Video Trailer</p>
                    <p class="mb-4">Trailer Not Available.</p>
                <% } %>
            </div>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>
    <!-- Link Bootstrap JS and dependencies (Optional for interactive components) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>